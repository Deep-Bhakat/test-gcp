            border-radius: 999px;
            position: relative;
        }
        
        .plus-button:after,
        .plus-button:before {
            content: "";
            display: block;
            background-color: green;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        
        .plus-button:before {
            height: 1em;
            width: 0.2em;
        }
        
        .plus-button:after {
            height: 0.2em;
