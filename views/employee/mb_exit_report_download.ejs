<%- include('../includes/header.ejs') %>

  <div class="container my-4  mx-auto rounded border">
    <h2 class="text-center my-2">Exit Report Download</h2>
    <div class="container mx-20 my-2 ">
        <form class="needs-validation" novalidate method="post" enctype="multipart/form-data" action="/employee/mb-exit-report">
            <% if(message){ %>
              <h2 class="text-center alert alert-success"><%= message %></h2>
              <% } %>
            <div class="row">       
              <div class="col-md-4 mb-3">
                  <label for="validationCustom02">Company</label>
                  <select class="form-select " id="company" name="company" onchange="getClient(this.value)" placeholder="Select Company Name "required>
                    <option value="">--SELECT--</option>
                    <% if(companies.length>0){ %>
                        <% for(let company of companies){ %>
                    <option value="<%= company.id %>"><%= company.company_name %></option>
                        <% } } %>
                </select>
                  <div class="invalid-feedback">
                    Please select company!
                  </div>
                </div>
	
            </div>   
           
                  
            <button class="btn btn-success" type="button" onclick="getExport()">Download Data</button>
          </form>
          
      
    </div>
</div>
<script>
    function getExport(){
      var company = $('#company').val();
      window.location = '/employee/export-mb-exit-report?company='+company;      

    }
</script>
<%- include('../includes/footer.ejs') %>
