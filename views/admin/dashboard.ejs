                    </div>
                </a>
            </div>
            <% } if(permissions.includes('9')){ %>   
   
            <div class="col-lg-4 col-sm-12">
                <a href="/admin/notification-details">
                    <div class="card text-white text-center bg-dark  mb-3" style="max-width: 18rem; height: 100px;">
                        <div class="card-body">
                            <h5 class="card-title" style="font-size: 2rem;">NEWS & NOTIFICATION </h5>
                        </div>
                    </div>
                </a>
