                            <h5 class="card-title" style="font-size: 2rem;">ID CARD</h5>
                        </div>
                    </div>
                </a>
            </div>
            <% } if(permissions.includes('5')){ %>    

            <div class="col-lg-4 col-sm-12">
                <a href="/admin/statute">
                    <div class="card text-white text-center bg-dark mb-3" style="max-width: 18rem; height: 100px;">
                        <div class="card-body">
                            <h5 class="card-title" style="font-size: 2rem;">FINGERTIP STATUTE</h5>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>    

       

            <%  if(permissions.includes('7') || permissions.includes('8') || permissions.includes('6')){ %>    

