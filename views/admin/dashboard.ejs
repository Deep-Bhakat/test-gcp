                <a href="/admin/new">
                    <div class="card text-white text-center bg-dark mb-3" style="max-width: 18rem; height: 100px;">
                        <div class="card-body">
                            <h5 class="card-title" style="font-size: 2rem;">NEW REGISTRATION</h5>
                        </div>
                    </div>
                </a>
            </div>
            <% } if(permissions.includes('4')){ %>    

