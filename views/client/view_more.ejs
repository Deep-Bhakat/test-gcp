</header>    

<div class="container my-5">

    <div class="row">
        <div class="col-12">
            <ul style="list-style-type:disc">
                <% if(news.length>0){ %>
                        <% for(let n of news){ %>
                        <li><a href="news-details/<%= n.id %>" ><p align="left" class="blink_me"><%= n.heading  %></p></a></li>
                <% } } %>
                <% if(hrs.length>0){ 
                    var monthNames = [ "January", "February", "March", "April", "May", "June", 
                    "July", "August", "September", "October", "November", "December" ];
                %>

                    <% for(let h of hrs){ %>
                    <li><a href="report-details/<%= h.id %>" ><p align="left" class="blink_me">HR Report for the month of <%= monthNames[h.month-1] %> <%= h.year %></p></a></li>
            <% } } %>
            </ul>
        </div>
    </div>
</div>